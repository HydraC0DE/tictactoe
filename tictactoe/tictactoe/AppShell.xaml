<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:tictactoe.Views"
       x:Class="tictactoe.AppShell">

    <TabBar>
        <ShellContent Title="History" ContentTemplate="{DataTemplate views:HistoryPage}" />
        <ShellContent Title="Play" Route="play" ContentTemplate="{DataTemplate views:PlayPage}" />
        <ShellContent Title="Picture" ContentTemplate="{DataTemplate views:PicturePage}" />
    </TabBar>
</Shell>

