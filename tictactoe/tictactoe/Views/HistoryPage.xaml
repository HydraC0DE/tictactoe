<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tictactoe.Views.HistoryPage"
             Title="Match History">

    <ListView x:Name="MatchesList"
          ItemSelected="OnMatchSelected"
          HasUnevenRows="True"
          SeparatorVisibility="Default">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Result, StringFormat='Winner of the game: {0}'}" FontAttributes="Bold" />
                        <Label Text="{Binding Date, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                        <Label Text="{Binding Latitude, StringFormat='Lat: {0:F5}'}" />
                        <Label Text="{Binding Longitude, StringFormat='Lon: {0:F5}'}" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>


</ContentPage>

