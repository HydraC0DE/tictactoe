<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tictactoe.Views.PlayPage"
             Title="Play">

    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Start">
        <Label x:Name="lblBestMove"
               Text="Solver move will appear here"
               FontSize="20"
               HorizontalOptions="Center" />

        <Grid x:Name="BoardGrid"
              WidthRequest="300"
              HeightRequest="300"
              BackgroundColor="#eee">
            <!-- Placeholder for TicTacToe board -->
        </Grid>

        <Button Text="Save Match"
                Clicked="OnSaveMatchClicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
