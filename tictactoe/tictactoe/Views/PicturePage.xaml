<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tictactoe.Views.PicturePage"
             Title="Take a Picture"
             xmlns:viewmodels="clr-namespace:tictactoe.ViewModels">
    <Grid>
        <!-- Main content -->
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Start">
            <Image Source="{Binding PreviewImage}"
                   WidthRequest="200"
                   HeightRequest="200"
                   Aspect="AspectFill"
                   BackgroundColor="#222" />

            <ImageButton Command="{Binding TakePhotoCommand}"
                         Source="camera.png"
                         WidthRequest="100"
                         HeightRequest="100"
                         HorizontalOptions="Center" />

            <Button 
                    Text="Go to Play"
                    Command="{Binding GoToPlayCommand}"
                    IsVisible="{Binding ShowGoButton}"/>
        </VerticalStackLayout>

        <!-- Processing overlay -->
        <Grid IsVisible="{Binding IsProcessing}" BackgroundColor="#88000000">
            <Label Text="Processing image and computing AI move..."
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" />
        </Grid>
    </Grid>
</ContentPage>

