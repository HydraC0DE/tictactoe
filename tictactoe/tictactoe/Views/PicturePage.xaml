<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tictactoe.Views.PicturePage"
             Title="Take a Picture">

    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">
        <Image x:Name="imgPreview"
               WidthRequest="200"
               HeightRequest="200"
               Aspect="AspectFill"
               BackgroundColor="#222" />

        <ImageButton x:Name="btnTakePhoto"
                     Source="camera.png"
                     WidthRequest="100"
                     HeightRequest="100"
                     Clicked="OnCameraClicked"
                     HorizontalOptions="Center" />

        <Button x:Name="btnGoToPlay"
                Text="Go to Play"
                Clicked="OnGoToPlayClicked"
                IsVisible="False" />
        <!-- hidden until photo taken -->
    </VerticalStackLayout>
</ContentPage>
